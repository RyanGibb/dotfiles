	bindsym o            $play_stop
	bindsym p            $play_pause
	bindsym bracketleft  $play_prev
	bindsym bracketright $play_next
	
	bindsym Return mode "default"
	bindsym Escape mode "default"

	bindsym $mod+p $play_pause; mode "default"
}
